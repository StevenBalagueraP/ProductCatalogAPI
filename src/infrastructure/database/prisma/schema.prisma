generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  idCategory  Int       @id @default(autoincrement())
  name        String
  description String?
  createdAt   DateTime  @default(now())
  // products    Product[] // relaci√≥n 1:n (se define cuando crees el modelo Product)
}
